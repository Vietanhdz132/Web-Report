<div class="layout-account">
    <div class="mt4">
        <div class="row">
            {{#each items}}
            <div class="col-sm-6 col-lg-4">
                <div class="card card-courses-item">
                    <a href="/products/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top " alt="{{this.name}}">
                    </a>

                    <div class="card-body">
                        <a href="/products/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text description">{{this.description}}</p>
                        <p class="card-text price">Gi√° b√°n: <span class="price-format">{{this.cost}}</span> VNƒê</p>

                        <div class="d-flex justify-content-between">
                            <button class="btn btn-buy">üõí Mua ngay</button>
                            <button class="btn btn-add-cart">‚ûï Th√™m v√†o gi·ªè</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script>
    document.querySelectorAll(".btn-buy").forEach(function (button) {
        button.addEventListener("click", async function (event) { // Th√™m t·ª´ kh√≥a async
            event.preventDefault(); // Ch·∫∑n h√†nh ƒë·ªông m·∫∑c ƒë·ªãnh

            const productName = button.closest(".card-body").querySelector(".card-title").textContent.trim(); // L·∫•y t√™n s·∫£n ph·∫©m
            const productPrice = button.closest(".card-body").querySelector(".price-format").textContent.trim();



            window.location.href = `/order?name=${encodeURIComponent(productName)}&price=${encodeURIComponent(productPrice)}`;

        });
    });

</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".price-format").forEach(function (el) {
            let price = parseInt(el.textContent, 10);
            el.textContent = price.toLocaleString("vi-VN");
        });
    });
</script>