</nav>




<script>
  document.querySelectorAll(".custom-tab .nav-link").forEach(link => {
    link.addEventListener("click", function () {
      // Xóa class active khỏi tất cả tab
      document.querySelectorAll(".custom-tab .nav-link").forEach(l => l.classList.remove("active"));

      // Thêm class active cho tab được click
      this.classList.add("active");
    });
  });
</script>
<script>
  // Nếu URL hiện tại là chính xác "/dashboard", thì chuyển hướng
  if (window.location.pathname === "/dashboard") {
    window.location.href = "/dashboard/average-card";
  }
</script>